    <div class="container">
        <h1>Prihlásenie do konkurzu</h1>
        <form action="" method="post" enctype="multipart/form-data">
            <label for="full-name">Meno а Priezvisko</label>
            <input type="text" id="full-name" name="full-name" placeholder="Zadajte svoje meno a priezvisko" required>

            <label for="email">e-mail</label>
            <input type="email" id="email" name="email" placeholder="Zadajte svoj email" required>

            <label for="phone">Telefónne číslo</label>
            <input type="tel" id="phone" name="phone" placeholder="+421 (XXX) XXX-XXX" required>

            <label for="position">Vybraná pozícia</label>
            <select id="position" name="position" required>
                <option value="">Vyberte si pozíciu</option>
                <option value="pilot">Pilot</option>
                <option value="flight-attendant">Letuška/Stevard</option>
                <option value="technician">Technik</option>
                <option value="manager">Manažér</option>
            </select>

            <label for="experience">Pracovné skúsenosti</label>
            <textarea id="experience" name="experience" rows="4" placeholder="Opíšte svoje pracovné skúsenosti"></textarea>

            <label for="resume">Životopis (PDF)</label>
            <input type="file" id="resume" name="resume" accept=".pdf" required>

            <label for="photo">Fotografia (JPEG/PNG)</label>
            <input type="file" id="photo" name="photo" accept=".jpeg,.jpg,.png" required>

            <label for="agreement">
                <input type="checkbox" id="agreement" name="agreement" required>
                Súhlasím s <a href="/terms" target="_blank">podmienkami konkurzu</a>.
            </label>

