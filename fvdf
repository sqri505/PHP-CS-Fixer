<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Получение данных из формы
    $fullName = htmlspecialchars($_POST['full-name'] ? '');
    $email = htmlspecialchars($_POST['email'] ? '');
    $phone = htmlspecialchars($_POST['phone'] ? '');
    $position = htmlspecialchars($_POST['position'] ? '');
    $experience = htmlspecialchars($_POST['experience'] ? '');
    $agreement = isset($_POST['agreement']) ? "Áno" : "Nie";

    // Отображение полученных данных
    echo "<h1>Údaje z formulára</h1>";
    echo "<p><strong>Meno a Priezvisko:</strong> $fullName</p>";
    echo "<p><strong>Email:</strong> $email</p>";
    echo "<p><strong>Telefónne číslo:</strong> $phone</p>";
    echo "<p><strong>Vybraná pozícia:</strong> $position</p>";
    echo "<p><strong>Pracovné skúsenosti:</strong> $experience</p>";
    echo "<p><strong>Súhlas s podmienkami:</strong> $agreement</p>";

    // Здесь можно добавить обработку файлов (резюме и фото) при необходимости
    exit; // Остановить выполнение и не отображать форму повторно
}
?>

